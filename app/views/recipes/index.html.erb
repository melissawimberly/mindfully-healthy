<% if !current_user %>
    <%= link_to "Sign In", new_user_registration_path %>
    <%= link_to "Log In", new_user_session_path %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
<% end %>
    
    <div id="body_div row">
      <div class="brand row">
        <%= image_tag("avo-drawing.png", :alt => "Avocado Cartoon", class: "logo-img") %>
        <h1>THE MINDFUL EATER</h1>
        <h4>Where Healthy Living Meets Mindful Awareness</h4>
      </div>
      <!-- Recipe Snippets -->
      <% @recipes[0..2].each do |recipe| %>
        <div class="recipe-snip row">
          <div class="recipe-post col-md-8 col-md-offset-2">
            <h3 class="text-center recipe-name"><%= recipe.name %></h3>
            <a id="recipe-img" href="#"><img class="img-responsive recipe-img-lg" src="<%= recipe.pic.url %>"></a>
            <%  if @likes.include? recipe.id %>
                <%#= link_to "Like", like_path(rec_id: recipe.id), remote: true, class: "liker hide-like heart"  %>
                <%=link_to( image_tag("avo-drawing.png", :alt => "Avocado Cartoon", class: "like-img liker"), like_path(rec_id: recipe.id), remote: true ) %>
                <%= link_to "Unlike", unlike_path(rec_id: recipe.id), remote: true, class: 'liker hide-like' %>
            <% else %>
                <%= link_to "Like", like_path(rec_id: recipe.id), remote: true, class: 'liker hide-like heart' %>
                <%= link_to "Unlike", unlike_path(rec_id: recipe.id), remote: true, class: "liker"  %>
            <% end %>

            <%#= link_to "Like", like_path(rec_id: recipe.id), remote: true  %>



            <p class="recipe-description"><%= recipe.description %></p>
            <!-- <hr> -->
            <div class="read-more text-center">
              <%= link_to "Full Recipe", recipe, id: "description-trunctd", class: "description" %>
            </div>
          </div>
        </div>
      <% end %>
      <% if current_user  %>
      <div class="add-new-btn">
        <%= link_to "Hey Miss! What'd You Cook Today?", new_recipe_path, class: "btn add-recipe", role: "button"%>
      </div>
      <% end %>
      </div>
      <% if current_user %>
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
