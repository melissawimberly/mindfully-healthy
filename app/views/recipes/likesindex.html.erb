<div id="likes_index_page">
	

	<div id="likes_header">
		<!-- <h1 class="title text-center">Breakfast</h1>  -->
		<h2 class="subtitle text-center">“I like what I like!  Here are all the recipes you've liked...”</h2>  
	</div>
	<div id="likes_content">
		<div class="grid">
			<% @recipes.each do |recipe| %>
			<div class="grid-item">
				<%=image_tag(recipe.pic.url, :alt => "Recipe", class: "img-responsive grid_img") %>
				
				<div class="read-more text-center">
					<%= link_to recipe do %>
					<%= content_tag :span, recipe.name %>
					<% end %>
				</div>
			</div>

			<% end %>
		</div>
	</div><!-- /snack content -->

</div><!-- /snack index page -->
<div class="back-btn text-right clear">
	<%= link_to "Back To Recipes", root_path, class: "btn btn-info description", role: "button"%>
</div>      

