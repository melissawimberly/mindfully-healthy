  <div id="sweets_index_page">
  
  	<div id="sweets_header">
  		<h2 class="subtitle text-center"> “A party without sweets is just a meeting...” </h2>  
  	</div>
  	<div id="sweets_content">
  		<div class="grid">
  			<% @sweetrecipes.each do |recipe| %>
  			<div class="grid-item">
  				<%=image_tag(recipe.pic.url, :alt => "Save This Recipe", class: "img-responsive grid_img") %>
  				
  				<div class="read-more text-center">
  					<%= link_to recipe do %>
  					<%= content_tag :span, recipe.name %>
  					<% end %>
  				</div>
  			</div>

  			<% end %>
  		</div>
  	</div><!-- /sweets content -->

  </div><!-- /sweets index page -->
  <div class="back-btn text-right clear">
  	<%= link_to "Back To Recipes", root_path, class: "btn btn-info description", role: "button"%>
  </div>      
