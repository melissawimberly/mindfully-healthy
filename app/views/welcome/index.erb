<div class='container'>
    <div id="rotating-item-wrapper">
    	<%= image_tag("banana-pancake.JPG", class: "rotating-item")%>
    	<%= image_tag("good-bread.JPG", class: "rotating-item")%>
    	<%= image_tag("quinoa-bowl.png", class: "rotating-item")%>
    	<%= image_tag("coconut-hemp-granola.jpg", class: "rotating-item")%>
    </div>

    <div class="viewport-center">
      <% if flash[:error] %>
        <div class="center welcome_flash_error"><%= flash[:error] %></div>
      <% end %>
      <h3 id="welcome-text">The Mindful Eater</span></h3>
      <!-- this text will only appear when form is toggle display: none -->

      <div id="login-form">
        <%= render partial: 'sessions/new', locals: {user: @user} %>
      </div>
      <div id="sign-up-form">
        <%= render partial: 'users/new', locals: {user: @user} %>
      </div>

      <div class="center welcome-btns">
        <button id="login-btn">Login</button>
        <button id="sign-up-btn">Sign Up</button>
      </div>
    </div><!-- viewport-center -->
</div><!-- container -->