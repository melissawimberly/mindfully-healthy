<div id="signup-form">
  
  <div class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner signup-carousel" role="listbox">
        <div class="item active">
        </div>
        <div class="item">
        </div>
        <div class="item">
        </div>
    </div>
  </div>


  <!-- Content on top of the slider -->
      <div class="welcome-signup text-center">
        <h2>Welcome To The Mindful Eater</h2>
        <h3>Let's Get You an Account So You Can Start Cooking!</h3>
      </div> 

    <div class="signup-content">
      
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field(:email, autofocus: true, placeholder: 'What\'s Your Email Address?') %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field(:password, autocomplete: "off", placeholder:'What Do You Want Your Password To Be?')  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field(:password_confirmation, autocomplete: "off", placeholder:'Retype Your Password, just to be sure')  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
        </div>
  </div>    
   </div><!-- /.signupmodal id -->
</div>